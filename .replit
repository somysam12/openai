modules = ["nodejs-20", "web", "python-3.11"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "ffmpeg-full", "jq"]

[env]
MASTRA_HIDE_CLOUD_CTA = "true"

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["sh", "-c", "cd .mastra/output && NODE_ENV=production node index.mjs"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35531
externalPort = 3002

[[ports]]
localPort = 36057
externalPort = 4200

[[ports]]
localPort = 36509
externalPort = 3001

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Local Test (DO NOT RUN if Render is active!)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Dev Server"

[[workflows.workflow]]
name = "Local Test (DO NOT RUN if Render is active!)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"⚠️ WARNING: Do NOT run this while bot is deployed on Render!\" && echo \"This is for LOCAL TESTING ONLY\" && echo \"If Render is active, it will cause 'Conflict' error\" && echo \"\" && echo \"To test locally:\" && echo \"1. Stop Render deployment first\" && echo \"2. Then run: python start_both_bots.py\" && sleep infinity"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Mastra Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
